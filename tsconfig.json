{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2022",
    "lib": ["es2022"],
    /* Module system: */
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    /* Import options: */
    "allowJs": true, //Allow import .js
    "resolveJsonModule": true, //Allow import .json
    "allowSyntheticDefaultImports": true,
    /* Strictness: */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    /* Directory */
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
